<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  
  <div class="container">
    <div class="titulo mt-5">
      <h1> <%= pergunta.titulo %> </h1>
    </div>
    <p class="mt-3 text-center"> <%= pergunta.descricao %> </p>
    <hr>
    <form method="POST" action="/responder">
      <label for="corpo">Resposta:</label>
      <textarea placeholder="Digite sua resposta" name="corpo" id="corpo" class="form-control">
        
      </textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-primary mt-3 mb-5">Responder</button>
    </form>
    <h3>Respostas</h3>
    <% respostas.forEach((resposta) => { %>
      <div class="card">
        <div class="card-body">
          <p> <%= resposta.corpo %> </p>
        </div>
      </div>
    <% }) %>
  </div>



</body>
<%- include ('partials/footer-scripts.ejs') %>


